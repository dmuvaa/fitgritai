{
  "crons": [
    {
      "path": "/api/cron/daily-emails",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/weekly-emails",
      "schedule": "0 19 * * 0"
    },
    {
      "path": "/api/cron/engagement-emails",
      "schedule": "0 10 * * 1"
    }
  ],
  "functions": {
    "app/api/cron/daily-emails/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/weekly-emails/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/engagement-emails/route.ts": {
      "maxDuration": 300
    },
    "app/api/ai/**": {
      "maxDuration": 60
    }
  }
}
